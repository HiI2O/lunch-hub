# ===========================================
# Lunch Hub Backend - 環境変数
# ===========================================
# このファイルをコピーして .env を作成してください
# cp .env.example .env

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=lunch_hub

# -------------------------------------------
# Redis
# -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -------------------------------------------
# JWT
# -------------------------------------------
JWT_ACCESS_SECRET=your-access-secret-change-me
JWT_REFRESH_SECRET=your-refresh-secret-change-me

# -------------------------------------------
# セルフサインアップ用 PIN
# -------------------------------------------
COMPANY_PIN=LunchHub2024

# -------------------------------------------
# メール送信 (開発環境: MailHog)
# -------------------------------------------
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
MAIL_FROM=noreply@lunch-hub.local

# -------------------------------------------
# アプリケーション
# -------------------------------------------
APP_URL=http://localhost:5173
PORT=3000
TZ=Asia/Tokyo

# -------------------------------------------
# 初期管理者アカウント (シード用)
# -------------------------------------------
ADMIN_EMAIL=admin@company.com
ADMIN_PASSWORD=Admin123!
ADMIN_DISPLAY_NAME=管理者
